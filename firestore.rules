rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Allow health check collection to be used for connectivity testing
    match /_health_check/{docId} {
      allow read, write: if true;
    }
    
    // Temporarily allow all access for testing (REMOVE THIS IN PRODUCTION)
    match /testing/{docId} {
      allow read, write: if true;
    }
    
    // Allow users to read and write their own data
    match /users/{userId} {
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow read: if isAuthenticated() && (request.auth.uid == userId || resource.data.isPublic == true);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // Allow users to read and write their own recipes
    match /recipes/{recipeId} {
      allow read: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || resource.data.isPublic == true);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 